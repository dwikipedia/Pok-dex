@model Pokédex.Model.Pokemon
@{
    ViewData["Title"] = "Create Pokemon";
}

<div class="bg-light mt-2">
    <h2 class="text-info"> @ViewData["Title"]</h2>
</div>
<div class="border container">
    <form enctype="multipart/form-data" method="post" class="mt-3">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <label asp-for="Name" class="col-md-3 col-form-label"></label>
            <div class="col-sm-6">
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Gender" class="col-md-3 col-form-label"></label>
            <div class="col-sm-6">
                <select name="Gender" asp-for="Gender" asp-items="@(new SelectList(ViewBag.DdlGender, "Value", "Text"))" class="form-control">
                    <option value="">- Please select a Gender -</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Heigth" class="col-md-3 col-form-label"></label>
            <div class="col-sm-3">
                <input type="number" asp-for="Heigth" class="form-control" />
            </div>
            <label class="col-md-3 col-form-label"> m</label>
            <span asp-validation-for="Heigth" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Weight" class="col-md-3 col-form-label"></label>
            <div class="col-sm-3">
                <input type="number" asp-for="Weight" class="form-control" />
            </div>
            <label class="col-md-3 col-form-label"> Kg</label>
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Type" class="col-md-3 col-form-label"></label>
            <div class="col-sm-6">
                <input type="text" asp-for="Type" class="form-control" />
            </div>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <div class="from-group row mb-3">
            <label asp-for="ImagePath" class="col-md-3 col-form-label"></label>
            <div class="col-sm-6">
                <input asp-for="ImageFormFile" class="form-control" />
            </div>
        </div>

        <div class="from-group row mb-3">
            <div class="col-2 offset-3">
                <input type="submit"
                       value="Create"
                       class="btn btn-primary form-control" />
            </div>
            <div class="col-2">
                <a asp-action="Index" class="btn btn-outline-dark form-control"> Back to list</a>
            </div>
        </div>
    </form>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}