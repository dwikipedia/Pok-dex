@{
    ViewData["Title"] = "Pokemon";
}

<div class="container p-0 mt-2">
    <div class="bg-light row">
        <div class="col-md-10">
            <h2 class="text-info">@ViewData["Title"]</h2>
        </div>
        <div class="col-md-2 mt-1">
            <a asp-action="Create" asp-controller="Pokemon" class="btn btn-md btn-info text-white">
                Add new
            </a>
        </div>
    </div>

    <div class="col-12 border p-3 m-3">
        <table id="Datatable" class="table table-striped table-bordered" style="width:100%">
            <thead class="text-center">
                <tr>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Type</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>


@section Scripts{
    <script src="~/js/Pokemon/pokemonList.js"></script>
}